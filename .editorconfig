root = true

[**.{s,i,sd}]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

[**.{c,h,fd}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[**.{doc,guide,readme,DIZ}]
charset = iso-8859-1
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[**.{cd,ct}]
charset = iso-8859-1
indent_style = tab
indent_size = 8
trim_trailing_whitespace = false

[makefile]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
